---
import { Github, Linkedin, Mail } from "lucide-react";
---

<footer
  class="bg-brutalist-black text-brutalist-white py-8 md:py-12 px-4 md:px-6 mt-12 md:mt-16"
>
  <div class="max-w-6xl mx-auto">
    <div
      class="flex flex-col md:flex-row justify-between items-center gap-6 md:gap-8"
    >
      <div>
        <a href="/" class="text-2xl md:text-3xl font-brutalist">
          PINK LLAMA
        </a>
      </div>

      <nav
        class="flex flex-wrap justify-center gap-4 md:gap-8 text-lg md:text-xl"
      >
        <a href="/" class="hover:text-brutalist-pink transition-colors">
          Home
        </a>
        <a
          href="/projects"
          class="hover:text-brutalist-pink transition-colors"
        >
          Projects
        </a>
        <a href="/blog" class="hover:text-brutalist-pink transition-colors">
          Blog
        </a>
      </nav>

      <div class="flex gap-6">
        <a
          href="https://github.com"
          class="text-white hover:text-brutalist-pink"
          aria-label="GitHub"
        >
          <Github size={24} />
        </a>
        <a
          href="https://linkedin.com"
          class="text-white hover:text-brutalist-pink"
          aria-label="LinkedIn"
        >
          <Linkedin size={24} />
        </a>
        <a
          href="mailto:imran@pinkllama.dev"
          class="text-white hover:text-brutalist-pink"
          aria-label="Email"
        >
          <Mail size={24} />
        </a>
      </div>
    </div>

    <div
      class="mt-8 md:mt-12 text-center text-brutalist-white/70 text-sm md:text-base"
    >
      <p>
        Â© {new Date().getFullYear()} Pink Llama Software. All rights reserved.
      </p>
    </div>
  </div>
</footer>
