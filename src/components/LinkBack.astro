---
const linkbackPath = `/${Astro.url.pathname.split("/")[1]}`;

const { path = linkbackPath, buttonText } = Astro.props as Props;
interface Props {
  path?: string
  buttonText?: string
}
---

<div class="text-center mt-12 mb-16">
  <a href={path || linkbackPath} class="brutalist-button--light inline-block">
    {buttonText ||"Back"}</a>
</div>
