---
import CallToAction from "@components/CallToAction.astro";
import Header from "@components/Header.astro";
import Home from "@components/Home.astro";
import PageMeta from "../components/PageMeta.astro";
import { SITE_TITLE } from "../config";
import PageLayout from "../layouts/PageLayout.astro";

const headerProps = {
  title: "Imran Nazir",
  description: "Web development that delivers results for entrepreneurs and small businesses.",
};

const ctaProps = {
  title: "Lets work together",
  description: "I help entrepreneurs and small businesses build their online presence and grow their business. Let's work together to achieve your goals.",
  buttonText: "Get in touch",
};
---

<PageLayout>
  <PageMeta title={`Home | ${SITE_TITLE}`} slot="meta" />
  <Header {...headerProps} slot="header" />
  <Home slot="main" />
  <CallToAction {...ctaProps}/>
</PageLayout>
