---
import AboutMe from "@/components/AboutMe.astro";
import CallToAction from "@/components/CallToAction.astro";
import ClientQuestions from "@/components/ClientQuestions.astro";
import Footer from "@/components/Footer.astro";
import MarqueeBar from "@/components/MarqueeBar.astro";
import Testimonials from "@/components/Testimonials.astro";
---

<div class="min-h-screen flex flex-col">
  <div class="bg-brutalist-yellow py-6 sm:py-8 md:py-10 mb-8 sm:mb-10 md:mb-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h1
        class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-brutalist brutalist-text-shadow uppercase text-brutalist-black"
      >
        Pink Llama <span class="block">Digital Forge</span>
      </h1>
      <p
        class="text-xl sm:text-2xl mt-3 sm:mt-4 max-w-prose text-brutalist-black"
      >
        Web development that delivers results for entrepreneurs and small
        businesses.
      </p>
    </div>
  </div>

  <main class="flex-grow max-w-6xl mx-auto px-4 sm:px-6">
    <ClientQuestions />
    <MarqueeBar />
    <AboutMe />
    <Testimonials />
    <CallToAction />
  </main>
  <Footer />
</div>
<script src="../lib/scrollReveal.ts"></script>
